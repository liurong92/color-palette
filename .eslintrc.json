{
  "env": {
    "es6": true,
    "node": true
  },
  "globals": {
    "document": true,
    "window": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": [ "error", 2 ],
    "quotes": [ "error", "single" ],
    "semi": [ "error", "never" ],
    "no-console": ["error", { "allow": ["warn", "error", "log"] }]
  },
  "extends": [ "eslint:recommended", "plugin:react/recommended" ]
}
